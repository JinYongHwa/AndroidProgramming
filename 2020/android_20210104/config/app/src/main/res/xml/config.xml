<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="알림">

        <SwitchPreference
            android:defaultValue="false"
            android:key="alarm_enabled"
            android:title="소리알람" />
        <SwitchPreference
            android:defaultValue="false"
            android:key="toast_alarm"
            android:title="토스트 알람" />
        <ListPreference
            android:defaultValue="1"
            android:entries="@array/sound_list"
            android:entryValues="@array/sound_list"
            android:key="sound"
            android:title="알림음" />
    </PreferenceCategory>
</PreferenceScreen>